local Players = game:GetService("Players")
local player = Players.LocalPlayer

local games = {
    [3623096087] = "https://raw.githubusercontent.com/Protocol-188373781637/Mxsclx-Lxgxns/refs/heads/main/Xssxmbly", -- Muscle Legends
    [1122519450] = "https://raw.githubusercontent.com/CoronaBlanca/Frxx-Vxrsxxn/refs/heads/main/OtroJuego"       -- Ejemplo
}

local function SafeGet(url)
    local ok, result = pcall(function()
        return game:HttpGet(url)
    end)
    return ok and result or nil
end

local placeId = game.PlaceId
local scriptURL = games[placeId]

if not scriptURL then
    player:Kick("❌ Este juego no está autorizado para Galaxy Hub.")
    return
end

local response = SafeGet(scriptURL)
if not response then
    player:Kick("❌ Error cargando script del juego.")
    return
end

loadstring(response)()
